@{
    ViewBag.Title = "Home Page";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<h1>Cruise App - @Environment.GetEnvironmentVariable("REGION")</h1>

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:100%;height:550px;margin-top:0.2%">

    @*Indicators**@
    <ol class="carousel-indicators" style="bottom:-250px">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    @*Wrapper for the slides*@
    <div class="carousel-inner" role="listbox">
        <div class="item active" style="height:550px">
            <img src="~/Images/france.jpg" alt="EiffelTower" style="width:100%;height:550px">
        </div>
        <div class="item" style="height:550px">
            <img src="~/Images/france-1.jpg" alt="FranceCity" style="width:100%;height:550px">
        </div>
        <div class="item" style="height:550px">
            <img src="~/Images/italy.jpg" alt="Italy" style="width:100%;height:550px">
        </div>
        <div class="item" style="height:550px">
            <img src="~/Images/italy-1.jpg" alt="Rome" style="width:100%;height:550px">
        </div>
    </div>


    @*Left and right arrows*@
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" style="bottom:-200px;height:550px">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" style="bottom:-200px;height:550px">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        @*sr-only- the text hides*@
        <span class="sr-only">Next</span>
    </a>

</div>

<div class="selection-menu">
    <div class="inner-selection-menu">
        
            @using (Ajax.BeginForm("Search", "Home", new AjaxOptions()
            {
                HttpMethod = "GET",
                UpdateTargetId = "searchResult",
                InsertionMode = InsertionMode.Replace
            }))
            {
            <fieldset>

                @Html.DropDownList("Year", "Month/Year")
                @Html.DropDownList("Destination", "Destination")
                @Html.DropDownList("Port", "Port")
                @Html.DropDownList("Duration", "Duration")
                <input type="submit" value="Search!" class="btn btn-default btn-sm"/>

            </fieldset>

        }
    </div>

</div>

<div id="searchResult">

</div>



