@model DDAC_Website.Models.Cruise

@{
    ViewBag.Title = "ViewCruise";


}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<div style="margin-left:1%;margin-bottom:2%;width:50%;position:relative">
    <h1>@Html.DisplayFor(model => model.cruise_name)</h1>

    @using (Html.BeginForm("bookCruise", "Cruise", new { id = Model.id }))
    {
        <input type="submit" class="btn btn-success" value="Book Cruise!" style="position:absolute;left:70%;top:8px" />

    }

</div>

<div class="panel panel-default" style="width:50%;margin-left:1%;margin-bottom:2%">

    <div class="panel-heading">

        @Ajax.ActionLink("Itinerary", "ViewItinerary", new { id = Model.id }, new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "ViewCruiseInfo",
    InsertionMode = InsertionMode.Replace

}) |


        @Ajax.ActionLink("Schedule", "Schedule", new { id = Model.id }, new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "ViewCruiseInfo",
    InsertionMode = InsertionMode.Replace

}) |
        @Ajax.ActionLink("Staterooms", "StateRooms", "State", new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "ViewCruiseInfo",
    InsertionMode = InsertionMode.Replace
})


    </div>

</div>

<div id="ViewCruiseInfo" style="width:60%;margin-left:1%">
        
</div>