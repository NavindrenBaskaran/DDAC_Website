
@model DDAC_Website.Models.Cruise
@{
    ViewBag.Title = "Compare";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<div class="panel panel-default" style="margin-left:1%;width:40%;float:left">

    <div class="panel-heading">@Model.cruise_name</div>

    <div class="panel-body">
        <table class="table table-hover">
            <tr>
                <th>Days</th>
                <th>Location</th>
                <th>Date</th>
            </tr>

            @{ int i = 1;}
            @foreach (var item in ViewBag.Cruise_Location)
            {

                <tr>
                    <td>@i</td>

                    <td>@item.Location_Name</td>
                    <td>@item.travel_Date.ToString("yyyy/MM/dd")</td>

                </tr>
                i++;

            }
        </table>





    </div>

</div>


<div id="compareCruise"  style="margin-left:45%;width:50%">
    <div class="panel panel-default">

        <div class="panel-heading">All Cruises</div>
        <div class="panel-body">

            @foreach (var item in ViewBag.OtherCruise)
            {
                <p>

                    @Ajax.ActionLink((string)item.cruise_name, "CompareSchedule", new { id = (int)item.id, selectedID = (int) Model.id}, new AjaxOptions
           {
               HttpMethod = "GET",
               UpdateTargetId = "compareCruise",
               InsertionMode = InsertionMode.Replace

           })
                </p>

            }
        </div>

    </div>
</div>