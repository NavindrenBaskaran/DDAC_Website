<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="cruise icon" type="image/x-icon" href="~/Images/favicon.ico"/>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open Sans">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome.css")
    @Scripts.Render("~/bundles/modernizr")
</head> 
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:white;border:0px;font-family:'Open Sans'">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Princess Cruise", "Index", "Home", new { area = "" }, new { @class = "navbar-brand special-fonts", @style = "color:black" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "special-fonts" , @style = "color:black" }) </li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "special-fonts" , @style = "color:black" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "special-fonts" , @style = "color:black" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div style="width:100%">
        @RenderBody()
        <hr />  
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
